.row
  .col-md-6.col-md-offset-3
    = form_for @link do |f|
      = render 'shared/errors', obj: @link
      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'
      .form-group
        = f.label :link
        = f.text_field :link, class: 'form-control'
      .form-group
        = f.label :tags
        = f.text_field :tag_list, class: 'form-control'
      = f.submit class: 'btn btn-primary'
